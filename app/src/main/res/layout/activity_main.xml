<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Set"
        android:onClick="set" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Push"
        android:onClick="push" />

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="ServHTTP"
        android:onClick="servHTTP" />
    <RelativeLayout android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:background="@drawable/interfazcasa">
        <Button
            android:id="@+id/button_o2"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="285dp"
            android:background="@drawable/ventiladora"
            android:onClick="op2" />
        <Button
            android:id="@+id/button_o1"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_marginTop="118dp"
            android:layout_marginLeft="230dp"
            android:background="@drawable/luza"
            android:onClick="op1" />
        <Button
            android:id="@+id/button_o3"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_marginTop="305dp"
            android:layout_marginLeft="199dp"
            android:background="@drawable/luza"
            android:onClick="op3" />
        <Button
            android:id="@+id/button_o4"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_marginTop="460dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/hornoa"
            android:onClick="op4" />
        <Button
            android:id="@+id/button_o5"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:layout_marginTop="390dp"
            android:layout_marginLeft="168dp"
            android:background="@drawable/lavadoraa"
            android:onClick="op5" />
    </RelativeLayout>
</LinearLayout>
